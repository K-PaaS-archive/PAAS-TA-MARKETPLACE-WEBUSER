<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
           "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
           "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<!-- TEMPLATES -->
    <definition name="defaultLayout" template="/WEB-INF/views/common/layout.jsp">
        <put-attribute name="head" value="/WEB-INF/views/common/head.jsp" />
		<put-attribute name="header" value="/WEB-INF/views/common/header.jsp" />
		<put-attribute name="left" value="/WEB-INF/views/common/left.jsp" />
		<put-attribute name="rightTitle" value="/WEB-INF/views/common/rightTitle.jsp" />
		<put-attribute name="body" value="" />
    </definition>

	<!-- user portal -->
	<definition name="/*/*" extends="defaultLayout">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>

</tiles-definitions>